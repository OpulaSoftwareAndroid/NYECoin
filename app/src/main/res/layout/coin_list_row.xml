<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cell_cardview_type_background"
    android:clickable="true"
    android:padding="@dimen/_10sdp"
    android:weightSum="3"
    android:focusable="true"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="50dp"
        android:id="@+id/imageViewCoin"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2.2"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewCoinFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="Bitcoin"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCoinShortName"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="(BTC)"
                android:textColor="@color/colorGrey"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textViewCoinRate"
                android:layout_width="wrap_content"
                android:layout_weight="2.7"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorGreen"
                android:text="3678.80"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCoinRateChange"
                android:layout_width="wrap_content"
                android:layout_weight="1.2"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_height="wrap_content"
                android:text="(0.0078)"
                android:textColor="@color/colorGreen"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:id="@+id/imageViewMarketTrend"
        android:src="@drawable/up_trend"
        android:layout_height="15dp" />



</LinearLayout>