<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_4sdp"

    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewAddressTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/m"
        android:padding="2dp"
        android:layout_marginLeft="5dp"
        android:paddingLeft="@dimen/_5sdp"
        android:text="456assa1241"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="2dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txt_tra_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/m"
                android:paddingLeft="@dimen/_5sdp"
                android:text="Amount:0.000000001"
                android:textColor="@color/black"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/txt_tra_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/m"
                android:paddingLeft="@dimen/_5sdp"
                android:text="Closed"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_tra_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/m"
                android:gravity="end"
                android:paddingLeft="@dimen/_5sdp"
                android:text="2018-09-07 12:40;45"
                android:textAllCaps="true"
                android:textColor="@color/colorGrey"
                android:textSize="10dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_tra_department"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:textSize="12dp"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/m"
                android:gravity="end"
                android:text="Deposite" />


            <TextView
                android:id="@+id/txt_tra_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/m"
                android:gravity="end"
                android:paddingLeft="@dimen/_5sdp"
                android:text="Fee:0.000000001"
                android:textSize="12dp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>