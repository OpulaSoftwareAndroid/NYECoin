<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/m"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:padding="@dimen/_8sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/receive_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/m"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"
                android:text="@string/receive_sub_heading_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="@font/m"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text="@string/app_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="@font/m"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_barcode"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_gravity="center"
            android:src="@drawable/barcode"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp" />

        <TextView
            android:fontFamily="@font/m"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="Scan QR Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_paxex_address"
            android:fontFamily="@font/m"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="sdgdsgsdgsdgsdgdsgdsgdsgsdgdsgsdg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:text="Copy"
                android:id="@+id/btnCopy"
                android:textColor="@color/white"
                android:background="@drawable/btnshape_primary_without_stroke"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/btn_copy"
                android:visibility="gone"
                android:background="@drawable/btnshape_plain_without_stroke"
                android:layout_marginRight="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:src="@drawable/ic_content_copy_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/btn_share"
                android:visibility="gone"
                android:background="@drawable/btnshape_plain_without_stroke"
                android:layout_marginRight="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:src="@drawable/ic_share_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>